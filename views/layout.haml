!!! 5
%html
  %head
    %title skoleporten.bengler.no
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html', :charset => 'utf-8'}/
    %meta{'http-equiv' => 'X-UA-Compatible', :content=>'chrome=1'}/
    %link{'rel' => 'stylesheet', 'type' => 'text/css', 'href' => '/stylesheet.css'}
    %link{'rel' => 'shortcut icon', 'href' => '/favicon.png'}
    %script{:type => "text/javascript",
      :src  => "http://maps.google.com/maps/api/js?sensor=false"}
    %script{:type => "text/javascript",
      :src  => "http://ajax.googleapis.com/ajax/libs/chrome-frame/1/CFInstall.min.js"}
    %script{:type => "text/javascript",
      :src  => "/jquery-1.4.3.min.js"}
    %script{:type => "text/javascript",
      :src  => "/scripts.js"}

  %body
    #map_canvas_container
      #map_canvas
    - if false
      %form.search{:id => "search", :method => "post"}
        %input{:placeholder => 'skole, fylke eller kommune', :name => "place", :size => 30, :class => "text", :length => 20}
        %input{:type => "button", :value => "Søk", }

    %header
      .header_top
        %h1 NASJONALE PRØVER
        %nav.year_selector
          %ul
            %li
              = link_to("2008", "/year/2008", :class => "selected")
            %li
              = link_to("2009", "/missing_data")
            %li
              = link_to("2010", "/missing_data")
        %ul.menu_section
          %li
            %nav.main_menu
              %ul
                %li
                  = link_to("hjem", "/")
                %li
                  = link_to("Om denne siden", "/about")
                -if false
                  %li
                    = link_to("kommuner og fylker", "/counties")

      .header_search_ui
        #view_stats
          &nbsp;

    %section
      = yield
    %footer
      %ul
        %li
          skoleporten.bengler.no er et 
          =link_to("Bengler-prosjekt", "http://bengler.no")
        %li
          = link_to("Kolofon", "/colofon")
        %li
          = link_to("Github", "http://github.com")
        %li
          = link_to("Følg skoleporten.bengler.no på Twitter", "http://twitter.com/skoleporten")