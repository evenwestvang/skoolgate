!!! 5
%html
  %head
    %title Nasjonale prøver på kartet
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html', :charset => 'utf-8'}/
    %meta{'http-equiv' => 'X-UA-Compatible', :content=>'chrome=1'}/
    %link{:href => '/stylesheet.css', :media => 'screen', :rel => 'stylesheet', :type => 'text/css'}/
    %link{'rel' => 'shortcut icon', 'href' => '/favicon.png'}
    %script{:type => "text/javascript",
      :src  => "http://maps.google.com/maps/api/js?sensor=false"}
    %script{:type => "text/javascript",
      :src  => "http://ajax.googleapis.com/ajax/libs/chrome-frame/1/CFInstall.min.js"}
    %script{:type => "text/javascript",
      :src  => "/js_libs_min.js"}
    %script{:type => "text/javascript",
      :src  => "/highcharts.js"}
    %script{:type => "text/javascript",
      :src  => "/app.js"}
    %script{:type => "text/javascript",
      :src  => "/settings.js"}

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-129279-17']);
      _gaq.push(['_trackPageview']);
      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  %body
    #container
      #map_canvas
      %form.search{:id => "search", :method => "post"}
        %input{:placeholder => 'skole, fylke eller kommune', :name => "place", :size => 30, :class => "text", :length => 20}
        %input{:type => "button", :value => "Søk", }
      %header{:style => "background-color: hsla(1,1,1,1);"}
        .header_top
          %h1
            = link_to("NASJONALE PRØVER", "/", :class => "selected")
          %nav.year_selector{:style => "display: none"}
            %ul
              %li#2008_link
                = link_to("2008", "#")
              %li#2009_link
                = link_to("2009", "#")
              %li#2010_link.active
                = link_to("2010", "#")
          %nav
            %ul
              %li
                = link_to("hjem", "/")
              %li
                = link_to("Skolene", "/schools")
              %li
                = link_to("Statistikk", "/stats")
              %li
                = link_to("Om tjenesten", "/about")
        .header_search_ui
          #view_stats
            &nbsp;
      %section
        = yield
      %footer
        %ul
          %li.muted
            skoleporten.bengler.no er et 
            =link_to("Bengler-prosjekt", "http://bengler.no")
          %li.twitter
            = link_to("Følg skoleporten på Twitter", "http://twitter.com/skoleporten")
          %li
            = link_to("Github", "http://github.com/evenwestvang/skoolgate")
          - if false
            %li
              = link_to("Kolofon", "/colofon")
