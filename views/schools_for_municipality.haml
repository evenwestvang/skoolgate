.content_page.school_listing_page
  %nav.school_listing
    %ul
      %li.title Alle skolene i
      %li= link_to @county.name, "/skolene/#{@county.link_name}"
      %li= link_to "Norge", "/skolene"
  %section
    %h1.accented= "Skolene i <strong>#{@municipality.name}</strong> kommune"
    %ul
      - @municipality.schools.order_by(:name.asc).each do |school|
        %li= link_to school.name, "/skolene/#{school.county.link_name}/#{school.municipality.link_name}/#{school.link_name}"